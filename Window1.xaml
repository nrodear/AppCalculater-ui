<Window x:Class="WpfAppCalculate.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCalculate"
        mc:Ignorable="d"
        Title="Window1" Height="358" Width="608">
    <Grid>
        <Grid x:Name="MainGrid" Margin="30,7,9,13" RenderTransformOrigin="0.5,0.5" >
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.821"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
        </Grid>
        <Button Content="Button" HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="545,300,0,0"
                Click="Button_Click" />

    </Grid>
</Window>